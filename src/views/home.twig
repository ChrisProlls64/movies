    <div id="home" class="wrapper">

        <div class="carrousel wrapper">
            <img src="images/slider/banner-a-la-une2.jpg" alt="slider à la une">
        </div>

      <h1 class="title-main">Dernières sorties</h1>
      <div class="lastRelease">
          {% for movie in lastReleased %}
          <div class="littleCards">
              <article>
              <a class="survol" href="{{ getUrl('details', { slug: movie.slug }) }}">
                  <img
                    class="thumbnail"
                    src="images/poster/{{ movie.poster }}"
                  alt="{{ movie.title }}">
                <div class="content">
                  <h3>{{movie.title}}</h3>
                  <p>Date de sortie : {{movie.releaseDate}}</p>
                  <p>Note de la presse : {{movie.note}} / 5</p>
                </div>
              </a>
            </article>

          </div>
        {% endfor %}
    </div>


    <h2 class="title-catalog">Tous les films d'animation</h2>
    <div id="movies-large">
        {% for movie in movies %}
        <article>
          <a href="{{ getUrl('details', { slug: movie.slug }) }}">
             <div class="poster-large">
                 <img
                    src="images/poster/{{ movie.poster }}"
                    alt="{{ movie.title }}"
                  >
             </div>
             <div class="content">
                 <h3>{{ movie.title }}</h3>
                 <p>Date de sortie : {{ movie.releaseDate }}</p>
                 <p>Durée : {{ movie.duration }}</p>
                 <p>Réalisateur : {{ movie.director }}</p>
                 <p>Note de la presse : {{ movie.note}} /5 </p>
                 <p>{{ movie.synopsis }}</p>

             </div>
          </a>
        </article>
        {% endfor %}
    </div>
</div>
