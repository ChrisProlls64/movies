{% extends "/layouts/public.twig" %} 
{% block title %}Accueil{% endblock %}

{% block content %}
<div id="home">
    <h1 class="title-main">Liste des meilleurs films</h1>

    <div id="movies">

        {% for movie in movies %}
        <article>
            <a href="{{ getUrl('details', {'slug' : movie.slug}) }}">
                <h2>{{ movie.title }}</h2>
                <p>{{ movie.synopsis }}</p>
                <img src="images/poster/{{ movie.poster }}" alt="{{ movie.title }}" />
            </a>
        </li>
    </article>
    {% endfor %}
</div>
</div>
{% endblock %}

